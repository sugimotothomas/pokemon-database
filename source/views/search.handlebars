<h2>Possible Moves</h2>
<table id="CanLearnTable">
	<tr>
		<th>ID</th>
        <th>Name</th>
		<th>Category</th>
		<th>Type</th>
		<th>Power</th>
		<th>PP</th>
		<th>Delete</th>
	</tr>
	{{#if moves}}
		{{#each moves}}
			<tr>
				<td>{{this.move_id}}</td>
				<td>{{this.move_name}}</td>
				<td class="moveCategory"><img src="https://img.pokemondb.net/images/icons/{{this.url}}.png" alt="{{this.move_category}}"></td>
				<td class="typeBox"><div id="{{this.move_type}}">{{this.move_type}}</div></td>
				<td>{{this.move_power}}</td>
				<td>{{this.move_pp}}</td>
				<td>
					<input type="button" 
						name="delete" value="Delete" 
						onClick = "deleteRow('CanLearnTable','{{this.move_id}}')">
					<input type="hidden" id="delete{{this.move_id}}">
			    </td>
			</tr>
		{{/each}}
	{{/if}}
</table>
